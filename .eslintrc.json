{
  "parser": "babel-eslint",
  "parserOptions": {
  },

  "plugins": [
    "react"
  ],

  "extends": [
    "standard-jsx"
  ],

  "rules": {
    "react/jsx-no-bind": [1, {
      "allowArrowFunctions": false,
      "allowBind": false,
      "ignoreRefs": true
    }],
    "react/no-did-update-set-state": 1,
    "react/react-in-jsx-scope": 1,
    "react/jsx-indent": [1, 4]
  }
}
